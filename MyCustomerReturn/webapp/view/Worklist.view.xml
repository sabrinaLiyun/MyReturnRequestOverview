<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic"
	controllerName="cn.bosch.MyCustomerReturn.controller.Worklist">
	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" level="H2"/>
		</semantic:titleHeading>
		<semantic:content>
			<Table id="table" width="auto" items="{ path: '/CustomerREturn', sorter: { path: 'CustomerReturn', descending: false } }"
				noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished=".onUpdateFinished">
				<headerToolbar>
					<OverflowToolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}" level="H3"/>
						
						<content>
							<Label text="Customer REturn Order" id="TextCustomerREturnOrder"/>
							<Input xmlns="sap.m" id="InputCustomerReturnOrder"/>
							<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search=".onSearch">
								<layoutData>
									<OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow"/>
								</layoutData>
							</SearchField>
							<Button xmlns="sap.m" text="GO" id="button0" type="Accept"/>
							<Button xmlns="sap.m" text="" id="button0_1596618086175"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column id="ReturnOrder">
						<Text text="{i18n>Customer Return Order}" id="ReturnOrderTitle"/>
					</Column>
					<Column id="SalesOrg" hAlign="End">
						<Text text="{i18n>Sales Orgnization}" id="SalesOrgTitle"/>
					</Column>
					<Column id="CustomerNumber">
						<Text text="{i18n>CustomerNumberTitle}" id="CustomerNumberTitle"/>
					</Column>
					<Column id="CustomerName" hAlign="End">
						<Text text="{i18n>CustomerNameTitle}" id="CustomerNameTitle"/>
					</Column>
					<Column id="CreationDate">
						<Text text="{i18n>Creation Date}" id="CreationDateTitle"/>
					</Column>
					<Column id="ReponseDate" hAlign="End">
						<Text text="{i18n>ReponseDateTitle}" id="ReponseDateTitle"/>
					</Column>
					<Column id="ApprovalSta" hAlign="End">
						<Text text="{i18n>ApprovalStaTitle}" id="ApprovalStaTitle"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press=".onPress">
						<cells>
							<ObjectIdentifier title="{CustomerReturn}"/>
							<ObjectIdentifier title="{SalesOrganization}"/>
							<ObjectIdentifier title="{SoldToParty}"/>
							<ObjectIdentifier title="{CustomerName}"/>
							<ObjectIdentifier title="{CreationDate}"/>
							<ObjectIdentifier title="{ResponseDate}"/>
							<ObjectIdentifier title="{OverialApprovalSta}" text="{ApprovalStatusDesc}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>
	</semantic:SemanticPage>
</mvc:View>