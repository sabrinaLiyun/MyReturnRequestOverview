<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" controllerName="SAPUI5MyReturnOrder.MyReturnOrderAPP.controller.CreateReturnOrder">
    <Page showHeader="true" title="Create New Return Order" showFooter="true" showNavButton="true" navButtonPress="_onPageNavButtonPress">
        <content>
            <form:Form width="100%" editable="true" visible="true">
                <form:title>
                    <core:Title text="Header" level="Auto"/>
                </form:title>
                <form:formContainers>
                    <form:FormContainer visible="true">
                        <form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Customer number" design="Standard" width="200px" required="false" textAlign="Begin" textDirection="LTR" visible="true"/>
								</form:label>
								<form:fields>
									<ComboBox id="Combox_CustomerID" width="400px" items="{ path: 'zreturn>/CustomerProfile', sorter: { path: 'CusomterID' } }">
										<core:Item key="{zreturn>CusomterID}" text="{zreturn>CusomterID}"/>
									</ComboBox>
									<Text width="600px" maxLines="1" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Sales Area" design="Standard" width="200px" required="false" textAlign="Begin" textDirection="LTR" visible="true"/>
								</form:label>
								<form:fields>
									<ComboBox id="Combox_SalesAreaID" width="400px" items="{ path: 'zreturn>/CustomerProfile', sorter: { path: 'SalesOrg' } }">
										<core:Item key="{zreturn>SalesOrg}/{zreturn>SalesChannel}/{zreturn>SalesDivision}"
											text="{zreturn>SalesOrg}/{zreturn>SalesChannel}/{zreturn>SalesDivision}"/>
									</ComboBox>
								</form:fields>
							</form:FormElement>
                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="3" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
                </form:layout>
            </form:Form>
			<Table width="auto" noDataText="No data" mode="MultiSelect" showSeparators="All" growing="true" growingThreshold="20"
				growingScrollToLoad="true" class="sapUiResponsiveMargin" 
				id = "oTableCreate"
				>
				<infoToolbar>
					<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
						<content>
							<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</content>
					</Toolbar>
				</infoToolbar>
				<headerToolbar>
					<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
						<content>
							<Title text="Items (3)" titleStyle="Auto" width="auto" textAlign="Begin" visible="true" wrapping="false"/>
							<ToolbarSpacer width=""/>
							<Button text="Add" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onAdd"/>
							<Button text="Delete" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onDelete"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Material Number" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Description" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Quantity" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Unit" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Return Reason" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Refund Type" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Active">
						<cells>
							<Input xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
								id="Material1"/>
							<Text text="eRacer V2" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" id="MaterialDes1"/>
							<Input xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
								id="Quantity1"/>
							<Text xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
								text="PC" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" id="Unit1"/>
							<ComboBox xmlns="sap.m" id="ComboBoxReturnReason1" items="{zreturn>/ReturnReasonText}">
								<items>
									<core:Item xmlns:core="sap.ui.core" key="{zreturn>ReturnReason}" text="{zreturn>ReturnReasonName}" id="itemReturnReason1"/>
								</items>
							</ComboBox>
							<ComboBox xmlns="sap.m" id="ComboBoxRefundType1" items="{zreturn>/RefundTypeText}">
								<items>
									<core:Item xmlns:core="sap.ui.core" key="{zreturn>ReturnsRefundType}" text="{zreturn>RefundTypeDescription}" id="itemRefundType1"/>
								</items>
							</ComboBox>
						</cells>
					</ColumnListItem>
					<ColumnListItem type="Active">
						<cells>
							<Input xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
								id="Material2"/>
							<Text text="eRacer V2" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" id="MaterialDes2"/>
							<Input xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
								id="Quantity2"/>
							<Text xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
								text="PC" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" id="Unit2"/>
							<ComboBox xmlns="sap.m" id="ComboBoxReturnReason2" items="{zreturn>/ReturnReasonText}">
								<items>
									<core:Item xmlns:core="sap.ui.core" key="{zreturn>ReturnReason}" text="{zreturn>ReturnReasonName}" id="itemReturnReason2"/>
								</items>
							</ComboBox>
							<ComboBox xmlns="sap.m" id="ComboBoxRefundType2" items="{zreturn>/RefundTypeText}">
								<items>
									<core:Item xmlns:core="sap.ui.core" key="{zreturn>ReturnsRefundType}" text="{zreturn>RefundTypeDescription}" id="itemRefundType2"/>
								</items>
							</ComboBox>
						</cells>
					</ColumnListItem>
					<ColumnListItem type="Active">
						<cells>
							<Input xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
								id="Material3"/>
							<Text text="eRacer V3" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" id="MaterialDes3"/>
							<Input xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
								id="Quantity3"/>
							<Text xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m"
								text="PC" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true" id="text13_copy3"/>
							<ComboBox xmlns="sap.m" id="ComboBoxReturnReason3" items="{zreturn>/ReturnReasonText}">
								<items>
									<core:Item xmlns:core="sap.ui.core" key="{zreturn>ReturnReason}" text="{zreturn>ReturnReasonName}" id="itemReturnReason3"/>
								</items>
							</ComboBox>
							<ComboBox xmlns="sap.m" id="ComboBoxRefundType3" items="{zreturn>/RefundTypeText}">
								<items>
									<core:Item xmlns:core="sap.ui.core" key="{zreturn>ReturnsRefundType}" text="{zreturn>RefundTypeDescription}" id="itemRefundType3"/>
								</items>
							</ComboBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
        </content>
        <footer>
            <OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
                <content>
                    <ToolbarSpacer width=""/>
                    <Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onSave"/>
                    <Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress1"/>
                </content>
            </OverflowToolbar>
        </footer>
        <headerContent/>
        <subHeader/>
        <customHeader/>
    </Page>
</mvc:View>